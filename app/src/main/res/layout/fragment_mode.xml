<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_mode"
    tools:context=".ui.ModeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:gravity="center">
            <TextView
                android:id="@+id/btn_one_player"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="@string/one_player"
                android:textSize="32sp"
                android:background="@drawable/bg_mode_btns"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/inknut_antiqua_regular"/>

            <View
                android:id="@+id/shadow_one"
                android:layout_width="310dp"
                android:visibility="gone"
                android:layout_marginHorizontal="60dp"
                android:layout_height="4dp"
                android:background="#B880EA"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:gravity="center">
            <TextView
                android:id="@+id/btn_two_player"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:text="@string/two_player"
                android:textSize="32sp"
                android:background="@drawable/bg_mode_btns"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/inknut_antiqua_regular"/>

            <View
                android:id="@+id/shadow_two"
                android:layout_width="310dp"
                android:visibility="gone"
                android:layout_marginHorizontal="60dp"
                android:layout_height="4dp"
                android:background="#B880EA"/>
        </LinearLayout>


    </LinearLayout>




</LinearLayout>